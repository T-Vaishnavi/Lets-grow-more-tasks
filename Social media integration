function myMove()
{
let id=null;
const elem=document.getElementById("animate");
img src="https://cdn.mos.cms.futurecdn.net/eKCXUTEEjqFtpByKXU6zS3-970-80.jpg.webp"
let pos=0;
clearInterval(id);
id=setInterval(frame,5);
function frame()
{
if(pos==350)
{
clearinterval(id);
}
else
{
pos++;
elem.style.top = pos+ "px";
elem.style.left = pos+ "px";
}
}
}
